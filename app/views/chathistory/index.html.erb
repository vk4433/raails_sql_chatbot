<!DOCTYPE html>
<html>
<head>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- Custom CSS for layout tweaks -->
  <style>
    .chat-history-card {
      max-height: 450px; /* Increased slightly for larger layout */
      overflow-y: auto;
      background-color: #f8f9fa;
    }
    .flash-card {
      animation: fadeIn 0.5s ease-in;
    }
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    pre {
      background-color: #e9ecef;
      padding: 15px; /* Larger padding for bigger layout */
      border-radius: 5px;
      font-size: 1rem; /* Larger font for code */
    }
    .card-body {
      padding: 2rem; /* More spacious card padding */
    }
  </style>
</head>
<body>
  <div class="container my-6"> <!-- Increased margin -->
    <h1 class="display-3 text-center mb-5">SQL Chatbot</h1> <!-- Larger title -->

    <!-- Form Section -->
    <div class="row justify-content-center">
      <div class="col-lg-10"> <!-- Wider column -->
        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <%= form_with url: chathistory_index_path, method: :post, local: true do |form| %>
              <div class="mb-4">
                <%= form.label :query, "Ask a question:", class: "form-label fw-bold fs-4" %> <!-- Larger label -->
                <%= form.text_field :query, placeholder: "Type your question here", class: "form-control form-control-lg", style: "width: 100%;" %> <!-- Larger input -->
              </div>
              <div class="d-flex justify-content-end">
                <%= form.submit "Submit", class: "btn btn-primary btn-lg" %> <!-- Larger button, aligned right -->
              </div>
            <% end %>
          </div>
        </div>
        <!-- Back Button -->
        <div class="mb-4">
          <%= link_to "Back", "/sql_credentials/show", class: "btn btn-success btn-lg" %> <!-- Larger button, below form -->
        </div>
      </div>
    </div>

    <!-- Error Message -->
    <% if flash[:error] %>
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <div class="alert alert-danger alert-dismissible fade show flash-card" role="alert">
            <%= flash[:error] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Flash Messages (Question, Query, Result) -->
    <% if flash[:question] || flash[:executed_query] || flash[:result] %>
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <div class="card shadow-sm mb-4 flash-card">
            <div class="card-body">
              <% if flash[:question] %>
                <h2 class="card-title h3">Question</h2> <!-- Larger header -->
                <pre class="mb-3"><%= flash[:question] %></pre>
              <% end %>

              <% if flash[:executed_query] %>
                <h2 class="card-title h3">Generated SQL Query</h2>
                <pre class="mb-3"><%= flash[:executed_query] %></pre>
              <% end %>

              <% if flash[:result] %>
                <h2 class="card-title h3">Query Result</h2>
                <div class="table-responsive">
                  <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                      <tr>
                        <% flash[:result].first&.keys&.each do |column| %>
                          <th><%= column.capitalize %></th>
                        <% end %>
                      </tr>
                    </thead>
                    <tbody>
                      <% flash[:result].each do |row| %>
                        <tr>
                          <% row.values.each do |value| %>
                            <td><%= value %></td>
                          <% end %>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Chat History -->
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <div class="card shadow-sm">
          <div class="card-header bg-primary text-white">
            <h2 class="h3 mb-0">Chat History</h2> <!-- Larger header -->
          </div>
          <div class="card-body chat-history-card">
            <% if @chat_history&.any? %>
              <% @chat_history.each do |chat| %>
                <div class="mb-4 border-bottom pb-3">
                  <strong class="fs-5">Question:</strong> <!-- Larger text -->
                  <pre class="mb-2"><%= chat.question %></pre>
                  <strong class="fs-5">SQL Query:</strong>
                  <pre><%= chat.generated_sql %></pre>
                </div>
              <% end %>
            <% else %>
              <p class="text-muted fs-5">No chat history available.</p> <!-- Larger text -->
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap 5 JS (with Popper.js) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>